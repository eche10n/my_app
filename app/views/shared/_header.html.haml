%h1
  = t('.header_line')
//%p Find me in app/views/shared/_header.html.haml

//%h1 Main page

%ul
  %lihead= link_to t('.help'), main_help_path
  - if signed_in?
    %lihead= link_to t('.work'), work_path

%nav
  %ul.nav.navbar-nav.pull-right
    %p.locale
      = link_to image_tag("russia.png", alt: "",  style: "width: 10%; height: 10%", title: "Русский" ), locale: :ru
      = link_to image_tag("united_kingdom.png", alt: "",  style: "width: 12%; height: 12%", title: "English"), locale: :en
  %b
    = I18n.locale
    - if signed_in?
      %li= link_to t('.users'), '/users'
      %li.logged
        #{current_user.email}
      = gravatar_for current_user
      %li
        #fat-menu.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %p
              = t('.person')
              %b.caret
        %ul.dropdown-menu
          %li= link_to t('.profile'), current_user
          %li= link_to t('.settings'), '#'
          %li.divider
          %li
            = link_to t('.sign_out'), signout_path
    - else
      %li= link_to t('.sign_in'), signin_path
      %li= link_to t('.sign_up'), signup_path